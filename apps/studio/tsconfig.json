{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@actions/*": ["actions/*"],
      "@blocks/*": ["schemaTypes/blocks/*"],
      "@components/*": ["components/*"],
      "@definitions/*": ["schemaTypes/definitions/*"],
      "@documents/*": ["schemaTypes/documents/*"],
      "@functions/*": ["functions/*"],
      "@hooks/*": ["hooks/*"],
      "@plugins/*": ["plugins/*"],
      "@schemaTypes/*": ["schemaTypes/*"],
      "@structure/*": ["structure/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", ".next", ".sanity"]
}
